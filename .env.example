# Server-side
MONGODB_URI="mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority"
MONGODB_DB="your_database_name" # optional; if provided, we connect to this DB name
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="replace-with-random-string" # optional (if using NextAuth)

# Cashfree Payments
CASHFREE_APP_ID="cf_app_id_here"
CASHFREE_SECRET_KEY="cf_secret_key_here"
CASHFREE_WEBHOOK_SECRET="cf_webhook_secret_here"
# Select environment: sandbox | production
NEXT_PUBLIC_CASHFREE_ENV="sandbox"
# Optional overrides
CASHFREE_ENV="sandbox" # server-side toggle (optional)
CASHFREE_BASE_URL="" # e.g., https://api.cashfree.com (optional)

# Upstash Redis (optional; rate limiting disabled if omitted)
UPSTASH_REDIS_REST_URL="https://<your-upstash-url>"
UPSTASH_REDIS_REST_TOKEN="<your-upstash-token>"

# WhatsApp Cloud API (optional)
WHATSAPP_PHONE_NUMBER_ID=""
WHATSAPP_TOKEN=""

# Public site URL used for SEO (robots/sitemap/OG)
NEXT_PUBLIC_SITE_URL="https://your-domain.com"
# Optional: used in some components/pages
NEXT_PUBLIC_BASE_URL="https://your-domain.com"

# Public WhatsApp number used to render floating WhatsApp icons (home hero, etc.)
# Format: include country code, digits only or with '+'; we'll normalize.
NEXT_PUBLIC_WHATSAPP_NUMBER="+919999999999"

# Admin protection (Basic Auth in production)
ADMIN_USER="admin"
ADMIN_PASS="strong-password"

# Seed protection
SEED_SECRET="set-a-strong-secret"